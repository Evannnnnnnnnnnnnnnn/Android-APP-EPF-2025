<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetAndroidDorsPasteau.NoActionBar"> <!-- APPLIQUER LE THÈME ICI POUR TOUTE L'APP -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ProjetAndroidDorsPasteau.NoActionBar"> <!-- Redondant si le thème de l'app est le même, mais ne fait pas de mal -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Product_detail"
            android:exported="false"
            android:label="Détails du Produit"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.ProjetAndroidDorsPasteau.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:label="Mon Panier"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.ProjetAndroidDorsPasteau.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ScanActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/Theme.ProjetAndroidDorsPasteau.NoActionBar" /> <!-- ScanActivity aussi avec le thème NoActionBar -->
    </application>

</manifest>